{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|svg|webp|ico|woff|woff2)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/og-meta", "function": "ogMeta" },
      { "source": "**", "destination": "/index.html" }
    ],
    "predeploy": ["npm run version-assets"]
  },
  "functions": { "source": "functions" },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
